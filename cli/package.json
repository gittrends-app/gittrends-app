{
  "name": "@gittrends-app/cli",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "lint": "eslint --ext .ts ./src",
    "compile": "tsc --build",
    "build:clean": "shx rm -rf ./dist tsconfig.tsbuildinfo",
    "build": "run-s build:clean compile",
    "tsx": "tsx -r \"dotenv-flow/config\"",
    "dev": "tsx  -r \"dotenv-flow/config\" src/index.ts",
    "start": "node -r \"dotenv-flow/config\" dist/index.js",
    "jest": "jest --runInBand",
    "test": "jest --runInBand",
    "test:coverage": "jest --collect-coverage",
    "verify": "run-s lint build test",
    "prettier": "prettier --write src"
  },
  "dependencies": {
    "@inquirer/prompts": "^5.1.3",
    "chalk": "^5.3.0",
    "consola": "^3.2.3",
    "lodash": "^4.17.21",
    "mongodb": "^6.8.0",
    "pluralize": "^8.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.6",
    "@types/mongodb": "^4.0.7",
    "@types/pluralize": "^0.0.33"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
